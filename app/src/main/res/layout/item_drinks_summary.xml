<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_layout"
    android:padding="4dp"
    android:layout_margin="1dp">

    <TextView
        android:id="@+id/ids_drink_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="DRINK DRINK"
        style="@style/normal_text_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ids_drink_value"/>

    <TextView
        android:id="@+id/ids_drink_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0"
        style="@style/normal_text_style"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ids_drink_name"/>

    <TextView
        android:id="@+id/ids_drink_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/normal_text_style"
        tools:text="0.00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ids_drink_currency"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"/>

    <TextView
        android:id="@+id/ids_drink_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/normal_text_style"
        android:text="@string/pln"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>