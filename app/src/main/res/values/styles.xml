<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeScreenStyleText" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HomeScreenButtons" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@color/background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="normal_text_style">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="user_data_style">
        <item name="android:textColor">#000000</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="alert_dialog_background">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:headerDividersEnabled">true</item>
    </style>

</resources>
